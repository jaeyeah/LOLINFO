<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="host">
	
	<!-- 등록 -->
	<insert id="insert">
		insert into tournament_host(
			host_streamer, host_tournament
		)
		values(
			#{hostStreamer}, #{hostTournament}
		)
	</insert>

	<!-- 대회별 개최자 조회 -->
	<select id="selectListByTournamentId" resultType="HostListVO">
		select * from host_list
		where host_tournament=#{tournamentId}
	</select>
	<!-- 스트리머별 개최대회 조회 -->
	<select id="selectListByStreamerNo" resultType="HostListVO">
		select * from host_list
		where host_streamer=#{streamerNo}
	</select>

</mapper>